# 环境配置模板
# 复制此文件为.env并根据需要修改配置

# 运行环境
NODE_ENV=development

# HLS-Communication服务配置
HLS_SERVICE_HOST=127.0.0.1
HLS_SERVICE_PORT=8888
HLS_SERVICE_TIMEOUT=5000

# Node-RED配置
NODERED_PORT=1880
NODERED_USER_DIR=./nodered-data

# 日志配置
LOG_LEVEL=info
LOG_DIR=./logs

# 数据库配置（如果需要）
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ss_sc_iot
# DB_USER=your_username
# DB_PASSWORD=your_password

# 安全配置
# JWT_SECRET=your_jwt_secret_here
# API_KEY=your_api_key_here

# 开发配置
DEBUG=ss-sc-iot:*
DEVELOPMENT_MODE=true