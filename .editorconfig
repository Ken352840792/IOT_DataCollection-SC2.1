# EditorConfig配置文件
# https://editorconfig.org

root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript/TypeScript文件
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON文件
[*.json]
indent_style = space
indent_size = 2

# YAML文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown文件
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# C#文件
[*.cs]
indent_style = space
indent_size = 4
max_line_length = 120

# C#项目文件
[*.{csproj,sln,props,targets}]
indent_style = space
indent_size = 2

# Shell脚本
[*.{sh,bash}]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 2

# 忽略生成的文件
[{package-lock.json,yarn.lock}]
insert_final_newline = unset
trim_trailing_whitespace = unset